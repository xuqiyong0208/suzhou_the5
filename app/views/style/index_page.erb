    image: "<%~ static_url("video/demo.jpg") %>",
    file: "<%~ static_url("video/demo.mp4") %>",
    controlbar: 'bottom',
    height : 460,
    width : 760, 
});
jwplayer("mediaplayer2").setup({
    flashplayer: "<%~ static_url("swf/player.swf") %>",
    image: "<%~ static_url("video/demo2.png") %>",
    file: "<%~ static_url("video/demo2.mp4") %>",
    controlbar: 'bottom',
    height : 460,
    width : 760, 
});

$(function(){

    function popup(t,b){

        $(b).bind('click',function(){

            var doc_height = $(document).height();
            var doc_width = $(document).width();
            var win_height = $(window).height();
            var win_width = $(window).width();
            
            var layer_height = $(t).height();
            var layer_width = $(t).width();

            $(".mask").css({display:'block',height:doc_height});
                $(t).css('top',(win_height-layer_height)/2);
                $(t).css('left',(win_width-layer_width)/2);
                $(t).css('display','block');
                return false;
            }
        )
        $(document).bind('click', function(e) {
            var $clicked = $(e.target);
            if (! $clicked.hasClass("tab")){
                $(t).css('display','none');
                $(".mask").css('display','none');
            }
        });
    }

    popup(".tab.mediaplayer1",".video_box a.mediaplayer1");
    popup(".tab.mediaplayer2",".video_box a.mediaplayer2");
})
</script>
<% end %>