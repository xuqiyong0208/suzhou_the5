<%= erb :_breadcrumbs,locals: {breadcrumbs: {"产品管理"=>"/admin/production","修改#{@category.title}产品图片"=>"javascript:;"}} %>


<% content_for(:head) do %>
    <script>window.STATIC_URL="<%~ backend_static_url("") %>"</script>
    <script type="text/javascript" src="<%~ backend_static_url "ueditor/ueditor.config.js" %>"></script>
    <script type="text/javascript" src="<%~ backend_static_url "ueditor/editor_api.js" %>"></script>
<% end %>

<article class="module width_full">
  <header><h3>修改产品图片 | <%~ @category.title %></h3></header>

  <div class="module_content">
  
    <form id="page_form" action="/admin/update_production_cover" method="post" enctype="multipart/form-data">

      <input type="hidden" name="id" value="<%~ @category.id %>">


      <% if @category.cover_path.url %>
      <fieldset>
        <div style="height:25px;"><label>当前图片</label></div>
        <div>
          <img src="<%~ @category.cover_path.url %>" alt="">
        </div>
      </fieldset>
      <% end %>

      <fieldset>
        <div style="height:25px;"><label>上传新图片</label></div>
        <div style="padding-left:8px;">
          <input type="file" name="cover_path">
        </div>
      </fieldset>

      <script type="text/javascript">

        var do_submit_form = function(){
          var $form = $("#page_form");

          $form.submit();
        }

      </script>
  
    </form>

  </div>
  <footer>
    <div class="submit_link">
      <input type="submit" value="保存" class="alt_btn" onclick="do_submit_form();">&nbsp;
      <input type="submit" value="重置" onclick="window.location.reload();">&nbsp;
      <input type="submit" value="预览" onclick="window.open('/production/<%~ @category.name %>');">
    </div>
</footer>
</article>